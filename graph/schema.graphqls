# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Stop {
  id: ID!
  stopId: String!
  name: String!
}

type Line {
  id: ID!
  lineId: String!
  name: String!
  stops: [Stop!]!
}

type Operator {
  id: ID!
  operatorId: String!
  name: String!
  lines: [Line!]!
}

enum SortOrder {
  ASC
  DESC
}

type Query {
  operators(order: SortOrder = ASC): [Operator!]!
  operator(id: ID!): Operator
  stopsForLine(operatorID: ID!, lineID: ID!): [Stop!]!
}
